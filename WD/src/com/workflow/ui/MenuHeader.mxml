<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:c="com.workflow.components.*"
		 xmlns:primitives="com.workflow.primitives.*"
		 x="0"
		 y="88"
		 width="100%"
		 height="37">
	
	<fx:Script>
		<![CDATA[
			private var _workflowName:String;

			[Bindable(event="workflowNameChange")]
			public function get workflowName():String
			{
				return _workflowName;
			}

			public function set workflowName(value:String):void
			{
				if( _workflowName !== value)
				{
					_workflowName = value;
					dispatchEvent(new Event("workflowNameChange"));
				}
			}

		]]>
	</fx:Script>
	
	<primitives:HLine x="0" y="0"/>
	<primitives:HLine x="0" y="37"/>
	
	<s:Label left="10" maxWidth="210" color="#DA2323" fontFamily="宋体" 
			 fontSize="18" fontWeight="bold"
			 maxDisplayedLines="1" text="{workflowName}" verticalCenter="0"/>
	
	<s:Group id="buttonContainer" width="100%" height="37" left="240">
		
		<s:layout>
			<s:HorizontalLayout gap="0"/>
		</s:layout>
		
		<c:MenuHeaderButton text="立即保存"/>
		<c:MenuHeaderButton text="舍弃"/>
		<c:MenuHeaderButton text="验证"/>
		<c:MenuHeaderButton text="对齐"/>
		<c:MenuHeaderButton text="缩放"/>
		<c:MenuHeaderButton text="网格" type="CheckBox"/>
		<c:MenuHeaderButton text="日志" type="CheckBox"/>
		
		<primitives:VLine/>
		
	</s:Group>
</s:Group>
