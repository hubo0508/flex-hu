<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:primitives="com.workflow.primitives.*"
		 xmlns:combination="com.workflow.components.combination.*"
		 height="37" 
		 x="0"
		 y="88"
		 width="100%">
	
	<fx:Script>
		<![CDATA[
			import mx.events.DynamicEvent;
			private var _workflowName:String;

			[Bindable(event="workflowNameChange")]
			public function get workflowName():String
			{
				return _workflowName;
			}

			public function set workflowName(value:String):void
			{
				if( _workflowName !== value)
				{
					_workflowName = value;
					dispatchEvent(new Event("workflowNameChange"));
				}
			}
			
			protected function menuHanderButtonHandler(event:DynamicEvent):void
			{
				trace("event.text = " + event.text + "    etype = " + event.etype + "     selected = " + event.selected);
				switch(event.text)
				{
					case "立即保存" :
						break;
					
					case "舍弃" :
						break;
					
					case "验证" : 
						break;
						
					case "对齐" :
						break;
					
					case "缩放" :
						break;
						
					case "网格" :
						break;
					
					case "日志" :
						break;
					
					default :
						break;
				}
			}

		]]>
	</fx:Script>
	
	<primitives:HLine x="0" y="0"/>
	<primitives:HLine x="0" y="37"/>
	
	<s:Label left="10" maxWidth="210" color="#DA2323" fontFamily="宋体" 
			 fontSize="18" fontWeight="bold"
			 maxDisplayedLines="1" text="{workflowName}" verticalCenter="0"/>
	
	<s:Group id="buttonContainer" width="100%" height="37" left="240">
		
		<s:layout>
			<s:HorizontalLayout gap="0"/>
		</s:layout>
		
		<combination:MenuHeaderButton handler="menuHanderButtonHandler(event)" text="立即保存"/>
		<combination:MenuHeaderButton handler="menuHanderButtonHandler(event)" text="舍弃"/>
		<combination:MenuHeaderButton handler="menuHanderButtonHandler(event)" text="验证"/>
		<combination:MenuHeaderButton handler="menuHanderButtonHandler(event)" text="对齐"/>
		<combination:MenuHeaderButton handler="menuHanderButtonHandler(event)" text="缩放"/>
		<combination:MenuHeaderButton handler="menuHanderButtonHandler(event)" text="网格" type="CheckBox"/>
		<combination:MenuHeaderButton handler="menuHanderButtonHandler(event)" text="日志" type="CheckBox"/>
		
		<primitives:VLine/>
		
	</s:Group>
</s:Group>
