<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 initialize="initializeHandler(event)"
		 creationComplete="creationCompleteHandler(event)"
		 width="100%"
		 height="100%" xmlns:menucomponents="com.biiway.stockassistant.view.menucomponents.*">
	
	<fx:Script>
		<![CDATA[
			import com.biiway.stockassistant.event.MenuEvent;
			import com.biiway.stockassistant.util.Const;
			import com.biiway.stockassistant.view.member.children.AccountInformation;
			import com.biiway.stockassistant.view.member.children.MemberRecharge;
			
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			
			protected function initializeHandler(event:FlexEvent):void
			{
				initEvent();
			}
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				secondaryMenu.dataProvider = getMenuData();
			}
			
			private function initEvent():void
			{
			}
			
			private function getMenuData():ArrayCollection
			{
				var acc:ArrayCollection = new ArrayCollection();
				acc.addItem({text:"基本设置",submenu:[{text:"账户资料",selected:false}]});
				acc.addItem({text:"充值",submenu:[{text:"会员充值",selected:true}]});
				acc.addItem({text:"交易查询",submenu:[{text:"交易管理"},{text:"收支明细"},{text:"充值记录"}]});
				acc.addItem({text:"我的应用"});
				
				return acc;
			}
			
			protected function menuEventHandler(event:MenuEvent):void
			{
				switch(event.text)
				{
					case "账户资料" :
						content.removeAllElements();
						content.addElement(new AccountInformation());
						break;
					
					case "会员充值" :
						content.removeAllElements();
						content.addElement(new MemberRecharge());
						break;
					
					case "交易管理" :
						content.removeAllElements();
						break;
					
					case "收支明细" :
						content.removeAllElements();
						break;
					
					case "充值记录" :
						content.removeAllElements();
						break;
					
					default:
						break;
				}
			}
			
		]]>
	</fx:Script>
	
	<s:BitmapImage  source="@Embed('assets/image/wa.png')" left="40" top="30"/>
	
	<s:Line id="sLine" left="0" right="0" top="62" height="0" xFrom="0" xTo="0" yFrom="0" yTo="0">
		<s:stroke>
			<s:SolidColorStroke color="0xD9D9D9" weight="1" caps="square"/>
		</s:stroke>
	</s:Line>
	
	<menucomponents:SecondaryMenu id="secondaryMenu" left="15" top="65" bottom="2" menuEvent="menuEventHandler(event)"/>
	
	<s:Line left="225" top="64" bottom="2" xFrom="0" xTo="0" yFrom="0" yTo="0">
		<s:stroke>
			<s:SolidColorStroke color="0xD9D9D9" weight="1" caps="square"/>
		</s:stroke>
	</s:Line>
	
	<s:Group id="content" top="63" width="100%" left="226" bottom="2" />
	
</s:Group>
