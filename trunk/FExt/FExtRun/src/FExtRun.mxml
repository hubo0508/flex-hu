<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:components="org.hu.fextjs.components.*" 
			   creationComplete="creationCompleteHandler(event)"
			   minWidth="955"
			   minHeight="600"
			   xmlns:FExt="library://FExt.HU"
			   xmlns:local="*">
	
	<fx:Style>
		@namespace FExt "library://FExt.HU";
		@namespace s "library://ns.adobe.com/flex/spark";
		
		s|Application{
			fontFamily:'微软雅黑'
		}
		
		FExt|FDataGrid{
			titleBackgroupColor:#7AB4F4;
			titleBorderColor:#696969;
			borderColor:#696969;
			alternatingItemColors: #FFFFFF, #F7F7F7;
			rollOverColor: #B2E1FF;
			selectionColor: #99cc66;
		}
		
	</fx:Style>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			import mx.events.ListEvent;
			
			import org.hu.fextjs.event.GridEvent;

			protected function creationCompleteHandler(event:FlexEvent):void
			{
				var acc:ArrayCollection = new ArrayCollection();
				acc.addItem({nametitle:"C网日均VLR忙时登记用户数(晚忙时20点)",name:9043184.44,name2:232,name3:9043184.44,name4:232});
				acc.addItem({nametitle:"C网日均语音话务量",name:1099994.14,name2:232,name3:9043184.44,name4:232});
				acc.addItem({nametitle:"C网日均1X数据话务量",name:787611.15,name2:232,name3:9043184.44,name4:232});
				acc.addItem({nametitle:"C网日均EVDO话务量",name:629752.65,name2:232,name3:9043184.44,name4:232});
				acc.addItem({nametitle:"C网日均忙时PDSN(1X)在线用户数(晚忙时21点)",name:562401.59,name2:232,name3:9043184.44,name4:232});
				acc.addItem({nametitle:"C网日均忙时PDSN（EVDO）在线用户数（晚忙时21点）",name:328108,name2:232,name3:9043184.44,name4:232});
				acc.addItem({nametitle:"C网彩信终端发送MMS条数",name:305000.98,name2:232,name3:9043184.44,name4:232});
				acc.addItem({nametitle:"C网彩信应用发送MMS条数",name:260469.46,name2:232,name3:9043184.44,name4:232});
				acc.addItem({nametitle:"C网短信发送成功总量",name:328108,name2:232,name3:9043184.44,name4:232});
				acc.addItem({nametitle:"C网短信接收成功总量",name:305000.98,name2:232,name3:9043184.44,name4:232});
				acc.addItem({nametitle:"全局疏通话务量",name:260469.46,name2:232,name3:9043184.44,name4:232});
				
				this.fdg.dataProvider = acc;	
				
				for(var i:int=0; i<acc.length; i++)
				{
					var cells:FCells = fdg.getFCells(fdgcolumn,acc[i],i,"nametitle");
					fdgcolumn.addElement(cells);
				}
			}

			protected function fdg_itemClickHandler(event:GridEvent):void
			{
				var lenValue:int = event.selectItems.length;
				for(var i:int=0; i<lenValue; i++)
				{
					this.chooseValue.text = this.chooseValue.text +"&#xd;"+event.selectItems[i]["name"];
				}
				
				var lenIndex:int = event.selectRowsIndex.length;
				for(var j:int=0; j<lenIndex; j++)
				{
					this.chooseIndex.text = this.chooseIndex.text +"&#xd;"+event.selectRowsIndex[j];
				}
			}

		]]>
	</fx:Script>
	
		<FExt:FContainer top="10" left="10" right="10" height="350">
		<FExt:TitleLabel text="标题标签">
			<FExt:customComponents>
				<s:Label id="moreLabelText"  fontFamily="宋体" fontSize="12" buttonMode="true"  fontWeight="bold" verticalCenter="0" right="5" color="#0C387F" useHandCursor="true" text="更多..." />
			</FExt:customComponents>			
		</FExt:TitleLabel>
		<FExt:FContent>
			<FExt:layout>
				<s:BasicLayout/>
			</FExt:layout>			
			
			<FExt:FDataGrid id="fdg" width="90%" left="10" top="10" paddingLeft="0" itemClick="fdg_itemClickHandler(event)" titleRowHeight="30">
				<FExt:mergeCells>
					<FExt:FMultiCells mergeCellsIndex="1,2,3" mergeCellsText="AP无线侧"/>
				</FExt:mergeCells>
				<FExt:columns>							
					<FExt:VContainer gap="0" horizontalAlign="right" bottom="right">
						<FExt:FCells width="280" text="性能数据" backgroupColor="#7AB4F4" borderSides="" borderColor="0x696969" height="30"/>
						<s:HGroup gap="1">
							<FExt:VContainer gap="0" width="100" borderSides="right">
								<FExt:FCells width="100%" height="132" text="C网" borderSides="bottom"/>
								<FExt:FCells width="100%" height="88" text="业务平台" borderSides="bottom"/>
								<FExt:FCells width="100%" text="软交换" borderSides=""/>
							</FExt:VContainer>						
							<FExt:FColumn id="fdgcolumn" width="180"/>
						</s:HGroup>
					</FExt:VContainer>
					<FExt:FBoxColumn headerText="选择" width="40" radio="false"/>
					<FExt:FColumn dataField="name" headerText="接收量(M)" itemRenderer="xx"/>
					<FExt:FColumn dataField="name2" headerText="发送量(M)"/>
					<FExt:FColumn dataField="name3" headerText="接收流量(Kbps) "/>
					<FExt:FColumn dataField="name4" headerText="发送流量(Kbps)"/>
					<FExt:FColumn dataField="name4" headerText="日平均在线用户数"/>							
				</FExt:columns>	
			</FExt:FDataGrid>			
			
		</FExt:FContent>
	</FExt:FContainer>
	<s:TextArea x="56" y="397" width="147" borderVisible="false" id="chooseValue"/>
	<s:TextArea x="226" y="398" width="147" borderVisible="false" id="chooseIndex"/>
	<s:Label x="226" y="377" text="DataGrid选中行索引"/>
	<s:Label x="56" y="376" text="DataGrid选中值"/>
	
	
</s:Application>
