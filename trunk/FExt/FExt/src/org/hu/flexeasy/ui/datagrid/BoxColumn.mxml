<components:VContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:ns="library://FExt.HU"
			   borderSides="right"
			   width="35"
			   gap="0" xmlns:components="org.hu.flexeasy.components.*">
	
	<fx:Script>
		<![CDATA[
			
			public static const RADIO_BUTTON:String = "radioButton";
			public static const CHECK_BOX:String = "checkBox";
			
			private var _radio:Boolean = true;
			private var _rowMultiSelection:Boolean = false;
			
			private var _headerText:String;			
			private var _boxType:String = CHECK_BOX;

			public function get headerText():String
			{
				return _headerText;
			}

			public function set headerText(value:String):void
			{
				_headerText = value;
			}

			public function get boxType():String
			{
				return _boxType;
			}

			public function set boxType(value:String):void
			{
				_boxType = value;
			}

			public function get radio():Boolean
			{
				return _radio;
			}

			public function set radio(value:Boolean):void
			{
				_radio = value;
			}

			public function get rowMultiSelection():Boolean
			{
				return _rowMultiSelection;
			}

			public function set rowMultiSelection(value:Boolean):void
			{
				_rowMultiSelection = value;
			}


		]]>
	</fx:Script>
	
</components:VContainer>
