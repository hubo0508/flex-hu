<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:components="com.hubo.workflow.components.*"
		 width="100%"
		 top="88">
	
	<fx:Metadata>
		[Event(name="rollMenu",type="mx.events.DynamicEvent")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.core.IVisualElement;
			import mx.core.UIComponent;
			import mx.events.DynamicEvent;
			
			override protected function createChildren():void
			{
				super.createChildren();
				
				this.initEvent();
			}
		
			private function initEvent():void
			{
				for(var i:int=0, num:int=hgroup.numElements; i<num; i++)
				{
					var menubutton:IVisualElement = hgroup.getElementAt(i);
					if(menubutton is MenuButton)
					{
						menubutton.addEventListener(MouseEvent.ROLL_OVER, menuButtonRollHandler,false,0,true);
						menubutton.addEventListener(MouseEvent.ROLL_OUT, menuButtonRollHandler,false,0,true);
					}
				}
			}
			
			protected function  menuButtonRollHandler(event:MouseEvent):void
			{
				var menubutton:MenuButton = event.currentTarget as MenuButton;
				
				switch(event.type)
				{
					case MouseEvent.ROLL_OUT :
						this.dispatchMenuEvent(MouseEvent.ROLL_OUT, menubutton.isBgEvent);
						break;
					
					case MouseEvent.ROLL_OVER :
						this.dispatchMenuEvent(MouseEvent.ROLL_OVER, menubutton.isBgEvent);
						break;
					
					default:
						break;
				}
			}

			private function dispatchMenuEvent(type:String, isBgEvent:Boolean):void
			{
				if(!isBgEvent)return;
				
				var dye:DynamicEvent = new DynamicEvent("rollMenu");
				dye.rolltype = type;
				
				this.dispatchEvent(dye);
			}
			
		]]>
	</fx:Script>
	
	<s:HGroup width="100%" gap="0" id="hgroup">
		<components:MenuButton text="请假审批流程" texttype="title" width="225" isBgEvent="false"/>
		<components:Separator/>
		<components:MenuButton text="节点" textcolor="0xDA2323" isDropDownMenu="true"/>
		<components:Separator/>
		<components:MenuButton text="立即保存"/>
		<components:Separator/>
		<components:MenuButton text="舍弃"/>
		<components:Separator/>
		<components:MenuButton text="验证"/>
		<components:Separator/>
		<components:MenuButton text="对齐" isDropDownMenu="true"/>
		<components:Separator/>
		<components:MenuButton text="缩放" isDropDownMenu="true"/>
		<components:Separator/>
		<components:MenuButton text="网格"/>
		<components:Separator/>
		<components:MenuButton text="日志"/>
		<components:Separator/>
		<components:MenuButton width="100%" isBgEvent="false"/>
	</s:HGroup>
	
</s:Group>
