			protected function separatorHandler(event:MouseEvent):void
			{
				switch(event.type)
				{
					case MouseEvent.CLICK :
						if(settingScroller.width == 210){
							settingScroller.width = 520;
							bar.visible = false;
							bal.visible = true;
