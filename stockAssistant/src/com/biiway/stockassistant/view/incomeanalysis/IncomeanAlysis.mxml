						return;
					}
					
					navmenu = obj as NavigationMenu;
					navmenu.dataProvider = data;
					return;
				}
				
				stockPoolScroller.viewport = createNavigationMenu(data);
			}
			
			private function createNavigationMenu(data:ArrayCollection):NavigationMenu
